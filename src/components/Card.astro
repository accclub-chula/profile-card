---
import { Image } from "@astrojs/image/components";
import { ImageUpload } from "./ImageUpload";

export interface Props {
  title?: string;
}
---

<div
  class="h-[800px] rounded-2xl bg-transparent w-full relative overflow-hidden flex flex-col gap-4 items-center"
  id="card"
>
  <Image
    alt="background"
    src="/profile-card/background.jpg"
    class="object-cover left-0 top-0 right-0 bottom-0 absolute -z-30 h-[800px]"
    width={900}
    height={1600}
    format="avif"
    fit="cover"
  />
  <Image
    alt="background effect"
    src="/profile-card/effect.png"
    class="object-cover left-0 top-0 right-0 bottom-0 absolute -z-10 h-[800px] animate-fade-in"
    width={900}
    height={1600}
    format="png"
    fit="cover"
  />
  <Image
    alt="background effect"
    src="/profile-card/star1.PNG"
